{
  "baseUrl": "http://127.0.0.1:3000",
  "state": "./state.local.json",
  "routes": ["/clients-overview"],
  "presets": ["macbook-14"],
  "waitMs": 2200,
  "targets": {
    "kpi-cards": {
      "selector": ".text-card-foreground.flex.flex-col.gap-6.rounded-xl.py-6.border.shadow-sm",
      "selectorAll": true,
      "outputBase": "kpi-card"
    },
    "filter-bar": {
      "selector": "xpath=//table/ancestor::div[2]/preceding-sibling::div[1]",
      "outputBase": "filter-bar"
    },
    "table-no-footer": {
      "selector": "xpath=//table/ancestor::div[2]",
      "outputBase": "table-no-footer"
    }
  }
}
