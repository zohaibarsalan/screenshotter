{
  "name": "screenshotter-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Screenshotter protocol, widget, and local save server packages.",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/*\" run build",
    "test": "pnpm -r --filter \"./packages/*\" run test",
    "release:check": "pnpm run build && pnpm run test && pnpm -r --filter \"./packages/*\" pack --pack-destination /tmp",
    "release:publish": "pnpm -r --filter \"./packages/*\" publish --access public"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "screenshot",
    "react",
    "capture",
    "widget"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "jsdom": "^27.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
