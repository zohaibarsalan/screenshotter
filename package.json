{
  "name": "screenshotter",
  "version": "1.0.0",
  "description": "Playwright-based dashboard screenshot automation with light/dark and element capture support.",
  "main": "capture.mjs",
  "scripts": {
    "login": "node login.mjs",
    "capture": "node capture.mjs",
    "widget:server": "pnpm --filter @screenshotter/server run start",
    "build": "pnpm -r --filter @screenshotter/* run build",
    "test": "pnpm -r --filter @screenshotter/* run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "playwright",
    "screenshots",
    "automation",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "jsdom": "^27.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "playwright": "^1.58.1"
  }
}
